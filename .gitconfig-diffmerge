[diff]
	tool = diffmerge
	submodule = log
[difftool "diffmerge"]
	cmd = /opt/local/bin/diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = /opt/local/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[alias]
	unstage = reset HEAD --
	last = log -1 HEAD
