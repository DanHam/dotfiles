## Here is an example for Python.

syntax "python" "\.py$"
header "^#!.*python[-0-9._]*"
linter pyflakes

# Function definitions.
icolor brightblue "def [0-9A-Z_]+"
# Keywords.
color cyan "\<(and|as|assert|break|class|continue|def|del|elif|else|except|exec|finally|for|from)\>"
color cyan "\<(global|if|import|in|is|lambda|not|or|pass|print|raise|return|try|while|with|yield)\>"

# Maths Symbols
color red "(\+|-|\*|/|%|<|>|<=|>=)"

# Single-quoted strings.
color blue "'([^'\]|\\.)+'"
color blue ""([^"\]|\\.)+""
# Comments.
color brightblack "(^|[[:blank:]])#.*$"
# Triple-quoted strings.
color brightgreen start="'''[^'),]" end="(^|[^(\])'''"
color brightgreen start="\"\"\"[^"),]" end="(^|[^(\])\"\"\""

# Reminders.
color ,yellow "(FIXME|TODO|XXX)"

# Trailing whitespace.
color ,green "[[:space:]]+$"
